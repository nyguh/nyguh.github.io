<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.odysee" name="Odysee (Unofficial)" version="1.1.0" provider-name="heppen">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="xbmc.addon" version="18.9.701"/>
    <import addon="script.module.libka" version="0.0.5"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Video add-on for Odysee</summary>
    <description lang="en_GB">This is Unofficial add-on for Odysee</description>
    <disclaimer lang="en_GB">This is an unofficial add-on that only allows you to view content. For full content, please visit the official site.</disclaimer>
    <language>en</language>
    <platform>all</platform>
    <license>GPL-2.0</license>
    <website>https://odysee.com</website>
    <source>https://github.com/kodi-pl-addons/plugin.video.odysee</source>
    <news>Rewritten Search function using KodiPL library module</news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
